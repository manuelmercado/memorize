@import "normalize.styl"
@import "nib"

verde = #006A4A
verde_claro = #0E8964
rojo_titulo = #925346


body
	font-size 16px
	font-family 'Myriad Pro Regular'
a
	text-decoration none

.boton_menu
	color white
	font-size 1.5em
	left 1em
	margin-top -10px
	position absolute
	top 50%
.button
	background-color verde
	border-bottom-left-radius 19px
	border-bottom-right-radius 19px
	border-top-left-radius 19px
	border-top-right-radius 19px
	color white
	display block
	left 50%
	margin-left -70px
	padding 0.5em 0.7em
	position fixed
	text-align center
	top 92vh
	width 125px
	
.center
	text-align center
.container
	margin 0 0.5em
.head
	background-color verde
	color white
	height 4.1em
	margin 0
	overflow hidden
	position relative
.menu
	display none
.left
	float left
.logout
	color white
	font-size 1.5em
	margin-top -10px
	position absolute
	right 1em		
	top 50%
.owner
	margin-top 1em
.right
	float right
.tarea
	padding 0 0 0.5em 0
	border-bottom solid 1px verde_claro
	margin 0.5em 0 0 0
	.tarea-titulo
		display block
		color verde_claro
		padding 0 0 1em 0
.tarea-datos
	overflow hidden
	
.titulo
	background-color rojo_titulo
	border-bottom-left-radius 14px
	border-bottom-right-radius 14px
	border-top-left-radius 14px
	border-top-right-radius 14px
	color white
	font-size 0.8em
	margin 1em 0.5em 0.5em 0.5em
	padding 0.5em 0.5em
	text-align center
.titulo-header
	text-align center
	margin-top 0.5em
	.usuario
		margin-top 1.2em
		font-size 0.8em




@font-face 
	font-family 'Myriad Pro Regular'
	font-style normal
	font-weight normal
	src local('Myriad Pro Regular'), url('../fonts/MYRIADPRO-REGULAR.woff') format('woff')

@font-face 
	font-family: 'icomoon'
	src:url('../fonts/icomoon.eot?-4c6ia9')
	src:url('../fonts/icomoon.eot?#iefix-4c6ia9') format('embedded-opentype'),
		url('../fonts/icomoon.ttf?-4c6ia9') format('truetype'),
		url('../fonts/icomoon.woff?-4c6ia9') format('woff'),
		url('../fonts/icomoon.svg?-4c6ia9#icomoon') format('svg')
	font-weight: normal
	font-style: normal

[class^="icon-"], [class*=" icon-"]
	font-family: 'icomoon'
	speak: none
	font-style: normal
	font-weight: normal
	font-variant: normal
	text-transform: none
	line-height: 1

	/* Better Font Rendering =========== */
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

.icon-home:before 
	content: "\e900"

.icon-search:before 
	content: "\e986"

.icon-menu:before 
	content: "\e9bd"

.icon-warning:before 
	content: "\ea07"

.icon-exit:before 
	content: "\ea14"
